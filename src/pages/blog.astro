---
import BaseLayout from "../components/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
import BlogTaglist from "../components/BlogTaglist.astro";
import rss, { pagesGlobToRssItems } from '@astrojs/rss';
import { getCollection } from "astro:content";

const blogPosts = await getCollection('blog')
const pageTitle = "ame / blog"
---

<BaseLayout pageTitle={pageTitle}>
    <BlogTaglist />
    {
        blogPosts.map((post) => <BlogPost slug={post.slug} title={post.data.title} description={post.data.description} date={post.data.pubDate} tags={post.data.tags} />)
    }
</BaseLayout>
